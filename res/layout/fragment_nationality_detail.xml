<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nationality_detail"
    style="?android:attr/textAppearanceLarge"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:textIsSelectable="true"
    tools:context=".NationalityDetailFragment" >

    <TextView
        android:id="@+id/txtNationalityDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />
    
    <fragment
        android:id="@+id/national_infantryteam_list"
        android:name="uk.org.downesward.dirtside.InfantryTeamListFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:layout="@android:layout/list_content" />

</LinearLayout>