<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uk.org.downesward.dirtside"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="uk.org.downesward.dirtside.ActivitySelectionActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="uk.org.downesward.dirtside.InfantryTeamListActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="uk.org.downesward.dirtside.InfantryTeamDetailActivity"
            android:label="@string/title_infantryteam_detail"
            android:parentActivityName="uk.org.downesward.dirtside.InfantryTeamListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".InfantryTeamListActivity" />
        </activity>
        <activity android:name="uk.org.downesward.dirtside.CombatResolutionActivity" >
        </activity>
        <activity
            android:name="uk.org.downesward.dirtside.CampaignsActivity"
            android:label="@string/title_activity_campaigns" >
        </activity>
        <activity
            android:name="uk.org.downesward.dirtside.NationalitiesActivity"
            android:label="@string/title_activity_nationalities" >
        </activity>
        <activity
            android:name="uk.org.downesward.dirtside.NationalityListActivity"
            android:label="@string/title_nationality_list" >
        </activity>
        <activity
            android:name="uk.org.downesward.dirtside.NationalityDetailActivity"
            android:label="@string/title_nationality_detail"
            android:parentActivityName=".NationalityListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".NationalityListActivity" />
        </activity>
    </application>

</manifest>
